<Window x:Class="GameProject.View.ManipulationWindows.HeroManipulationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameProject.View.ManipulationWindows"
        mc:Ignorable="d"
        Title="HeroManipulationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="425">
            <Label Content="Name:"/>
            <TextBox Margin="0,0,0,10" Text="{Binding Name}"/>
            <Label Content="Health:"/>
            <TextBox Margin="0,0,0,10" Text="{Binding Health}"/>
            <Label Content="Mana:"/>
            <TextBox Margin="0,0,0,10" Text="{Binding Mana}"/>
            <Label Content="Attack:"/>
            <TextBox Margin="0,0,0,10" Text="{Binding Attack}"/>
            <Label Content="Defense:"/>
            <TextBox Margin="0,0,0,10" Text="{Binding Defense}"/>
            <Button Content="Save" HorizontalAlignment="Center" Margin="0,20,0,20" VerticalAlignment="Top" Click="bnt_Save" Width="150" Grid.ColumnSpan="2"/>
        </StackPanel>
    </Grid>
</Window>
